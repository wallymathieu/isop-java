<?xml version="1.0" encoding="UTF-8"?>
<project name="module_jisop" default="compile.module.jisop">
  <dirname property="module.jisop.basedir" file="${ant.file.module_jisop}"/>
  
  <property name="module.jdk.home.jisop" value="${project.jdk.home}"/>
  <property name="module.jdk.bin.jisop" value="${project.jdk.bin}"/>
  <property name="module.jdk.classpath.jisop" value="${project.jdk.classpath}"/>
  
  <property name="compiler.args.jisop" value="-encoding UTF-8 -source 8 ${compiler.args}"/>
  
  <property name="jisop.output.dir" value="${module.jisop.basedir}/../out/production/jisop"/>
  <property name="jisop.testoutput.dir" value="${module.jisop.basedir}/../out/test/jisop"/>
  
  <path id="jisop.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="jisop.module.production.classpath">
    <path refid="${module.jdk.classpath.jisop}"/>
  </path>
  
  <path id="jisop.runtime.production.module.classpath">
    <pathelement location="${jisop.output.dir}"/>
  </path>
  
  <path id="jisop.module.classpath">
    <path refid="${module.jdk.classpath.jisop}"/>
    <pathelement location="${jisop.output.dir}"/>
  </path>
  
  <path id="jisop.runtime.module.classpath">
    <pathelement location="${jisop.testoutput.dir}"/>
    <pathelement location="${jisop.output.dir}"/>
  </path>
  
  
  <patternset id="excluded.from.module.jisop">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.jisop">
    <patternset refid="excluded.from.module.jisop"/>
  </patternset>
  
  <path id="jisop.module.sourcepath">
    <dirset dir="${module.jisop.basedir}/../../jisop">
      <include name="src"/>
    </dirset>
  </path>
  
  
  <target name="compile.module.jisop" depends="compile.module.jisop.production,compile.module.jisop.tests" description="Compile module jisop"/>
  
  <target name="compile.module.jisop.production" description="Compile module jisop; production classes">
    <mkdir dir="${jisop.output.dir}"/>
    <javac destdir="${jisop.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.jisop}/javac">
      <compilerarg line="${compiler.args.jisop}"/>
      <bootclasspath refid="jisop.module.bootclasspath"/>
      <classpath refid="jisop.module.production.classpath"/>
      <src refid="jisop.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.jisop"/>
    </javac>
    
    <copy todir="${jisop.output.dir}">
      <fileset dir="${module.jisop.basedir}">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.jisop.tests" depends="compile.module.jisop.production" description="compile module jisop; test classes" unless="skip.tests"/>
  
  <target name="clean.module.jisop" description="cleanup module">
    <delete dir="${jisop.output.dir}"/>
    <delete dir="${jisop.testoutput.dir}"/>
  </target>
</project>